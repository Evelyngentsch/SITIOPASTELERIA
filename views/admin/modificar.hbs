<div class="container contact-form">
       <h3>Modificar la novedad</h3>
    <form class="flexer" method="post" action="/admin/novedades/modificar" enctype="multipart/form-data">
        <input type="hidden" value="{{novedad.id}}" name="id">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <h2>Título:</h2>
                        <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="">
                    <div class="form-group">
                        <h2>Subtítulo:</h2>
                        <textarea maxlength="250" name="subtitle" class="form-control" placeholder="Subtítulo"
                            style="width: 100%; height: 175px;">{{novedad.subtitulo}}</textarea>
                    </div>
                </div>

            </div>
            <div class="col-6">
                <div class="form-group">
                    <h2>Describa la novedad:</h2>
                    <textarea  name="cuerpo" class="form-control" placeholder="Cuerpo"
                        style="width: 100%; height: 300px;">{{novedad.cuerpo}}</textarea>
                </div>
            </div>

        

        </div>
        <div class="py-4">
            <div class="form-group">
                <button type="submit" class="btnContact btn btn-danger">Modificar</button>
            </div>
        </div>
    </form>
      {{#if error}}
        <h5>{{message}}</h5>
        {{/if}}
</div>