<div class="container contact-form">
    <form class="flexer" method="post" action="/admin/novedades/agregar" >
        <h3>Agrega una nueva novedad!</h3>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <h2>Título:</h2>
                    <textarea maxlength="250" name="titulo" class="form-control" placeholder="Título"
                        style="width: 100%; height: 125px;"></textarea>
                </div>
                <div class="">
                    <div class="form-group">
                        <h2>Subtítulo:</h2>
                        <textarea maxlength="250" name="subtitulo" class="form-control" placeholder="Subtítulo"
                            style="width: 100%; height: 175px;"></textarea>
                    </div>
                </div>

            </div>
            <div class="col-6">
                <div class="form-group">
                    <h2>Describa la novedad:</h2>
                    <textarea  name="cuerpo" class="form-control" placeholder="Cuerpo"
                        style="width: 100%; height: 300px;"></textarea>
                </div>
            </div>

        

        </div>
        <div class="py-4">
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Subir</button>
            </div>
        </div>
    </form>
      {{#if error}}
        <h5>{{message}}</h5>
        {{/if}}
</div>